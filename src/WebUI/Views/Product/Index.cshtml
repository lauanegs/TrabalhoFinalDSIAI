@model IEnumerable<Application.ViewModels.ProductViewModel>

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Produtos</h2>
    <a class="btn btn-primary" href="/Product/Create">Novo Produto</a>
</div>

<table class="table table-striped">
    <thead><tr><th>Nome</th><th>Qtd</th><th>Pre√ßo</th><th></th></tr></thead>
    <tbody>
    @foreach(var p in Model) {
        <tr>
            <td>@p.Name</td>
            <td>@p.Quantity</td>
            <td>@p.Price.ToString("C")</td>
            <td>
                <a class="btn btn-sm btn-info" href="/Product/Details/@p.Id">Detalhes</a>
                <a class="btn btn-sm btn-warning" href="/Product/Edit/@p.Id">Editar</a>
                <a class="btn btn-sm btn-danger" href="/Product/Delete/@p.Id">Apagar</a>
            </td>
        </tr>
    }
    </tbody>
</table>