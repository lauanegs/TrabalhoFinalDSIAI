@model IEnumerable<Application.ViewModels.CategoryViewModel>

@{
    ViewData["Title"] = "Categorias";
}

<h2>Categorias</h2>

<p>
    <a class="btn btn-primary" asp-action="Create">Nova Categoria</a>
</p>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Nome</th>
            <th style="width:180px;">Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var c in Model)
        {
            <tr>
                <td>@c.Name</td>
                <td>
                    <a asp-action="Details" asp-route-id="@c.Id" class="btn btn-sm btn-info">Detalhes</a>
                    <a asp-action="Edit" asp-route-id="@c.Id" class="btn btn-sm btn-warning">Editar</a>
                    <a asp-action="Delete" asp-route-id="@c.Id" class="btn btn-sm btn-danger">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>
